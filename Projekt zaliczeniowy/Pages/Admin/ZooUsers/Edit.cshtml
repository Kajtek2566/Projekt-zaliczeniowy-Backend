@page "{id:int}"
@model Projekt_zaliczeniowy.Pages.Admin.ZooUsers.EditModel

<h2>Edit User</h2>

<form method="post">
    <input type="hidden" asp-for="ZooUser.ID" />
    <div class="form-group">
        <label asp-for="ZooUser.ID"></label>
        <input asp-for="ZooUser.ID" class="form-control" disabled />
        <span asp-validation-for="ZooUser.ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZooUser.FirstName"></label>
        <input asp-for="ZooUser.FirstName" class="form-control" />
        <span asp-validation-for="ZooUser.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZooUser.LastName"></label>
        <input asp-for="ZooUser.LastName" class="form-control" />
        <span asp-validation-for="ZooUser.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZooUser.Login"></label>
        <input asp-for="ZooUser.Login" class="form-control" />
        <span asp-validation-for="ZooUser.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZooUser.Email"></label>
        <input asp-for="ZooUser.Email" class="form-control" />
        <span asp-validation-for="ZooUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZooUser.PhoneNumber"></label>
        <input asp-for="ZooUser.PhoneNumber" class="form-control" />
        <span asp-validation-for="ZooUser.PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
