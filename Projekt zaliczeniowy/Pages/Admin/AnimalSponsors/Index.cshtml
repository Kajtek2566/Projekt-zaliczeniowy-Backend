@page
@model Projekt_zaliczeniowy.Pages.Admin.AnimalSponsors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnimalSponsor[0].PriceOfFunding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalSponsor[0].StartOfSponsoring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalSponsor[0].Animal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalSponsor[0].UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AnimalSponsor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceOfFunding)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartOfSponsoring)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
